import java.util.*;
public class Sumup
{
 public static void main(String []args)
 {
  Scanner ob=new Scanner(System.in);
  boolean s=true;
  int a,b,sum=0,count=0;               //a is for summing numbers
                                       //b is for checking the continuation
                                       //count is to check number of numbers
  System.out.println("Enter number");
  while(s==true)                       //while loop continues until s became false
  {
   count=count+1;
   a=ob.nextInt();             
   sum=sum+a;
  System.out.println("Sum of"+" "+count+" "+"numbers is"+" "+sum);
  System.out.println("DO you want to continue press 1 else press 0");
  b=ob.nextInt();
  if(b==1)
  {
   s=true;
  }
  else if(b==0)
  {
   s=false;
   System.out.println(sum);
  }
  else
   System.out.println("Error");
  }
 }
}
  
